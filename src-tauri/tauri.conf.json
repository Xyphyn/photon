{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "photon-fedi",
  "version": "../package.json",
  "identifier": "app.phtn.client",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm dev --host 0.0.0.0",
    "beforeBuildCommand": "ADAPTER=static npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Photon",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "url": "index.html"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
